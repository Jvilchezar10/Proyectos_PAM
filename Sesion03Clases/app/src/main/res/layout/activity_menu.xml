<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btton_registrar"
                android:layout_width="294dp"
                android:layout_height="54dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="152dp"
                android:layout_marginEnd="50dp"
                android:onClick="irRegistrar"
                android:text="@string/txt_reg"/>

            <Button
                android:id="@+id/btton_spinner"
                android:layout_width="296dp"
                android:layout_height="55dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="50dp"
                android:onClick="irSpinner"
                android:text="@string/txt_sp" />

            <Button
                android:id="@+id/btton_gridview"
                android:layout_width="296dp"
                android:layout_height="55dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="50dp"
                android:onClick="irGrid"
                android:text="@string/txt_grid" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>